<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainrunbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/splashScreenText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="SafeCardio"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/splashScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashScreenText1"
        android:layout_centerHorizontal="true"
        android:text="A safer way to exercise"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/splashScreenText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/runButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="or"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="normal|bold|italic" />


    <TextView
        android:id="@+id/splashScreenText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/runButton"
        android:text="Will you be running or swimming?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/waterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/splashScreenText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/splashScreenText"
        android:layout_marginBottom="56dp"
        android:background="#046073"
        android:gravity="center"
        android:onClick="openWaterOptions"
        android:padding="10dip"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
        android:text="Swimming"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/runButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/splashScreenText"
        android:layout_alignStart="@+id/splashScreenText"
        android:layout_alignTop="@+id/waterButton"
        android:background="#694119"
        android:gravity="center"
        android:onClick="openLandOptions"
        android:padding="10dip"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="0.6"
        android:text="Running"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>
