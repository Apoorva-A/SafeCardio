<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="    Seconds Left:"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/landmin"
        android:layout_alignLeft="@+id/landmin"
        android:layout_alignStart="@+id/landmin" />

    <TextView
        android:id="@+id/landmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="    Minutes Left:"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/emergency"
        android:layout_alignLeft="@+id/emergency"
        android:layout_alignStart="@+id/emergency" />

    <TextView
        android:id="@+id/emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="    Emergency Timer:"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:background="#50ccdd"
        android:textColor="#FFFFFF"
        android:text="                                      STOP"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:stateListAnimator="@null"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/resumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:gravity="left|center_vertical"
        android:background="#50ccdd"
        android:text="                                      RESUME"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/stopButton"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:gravity="left|center_vertical"
        android:background="#50ccdd"
        android:stateListAnimator="@null"
        android:text="                                      RESET"
        android:layout_below="@+id/resumeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="10dip"
        android:text="SafeCardio"
        android:textColor="#09cde7"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="10dip"
        android:text="HOME"
        android:textColor="#09cde7"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop"
        android:backgroundTint="#09cde7"
        android:id="@+id/imageButton10"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/time"
        android:layout_toEndOf="@+id/time" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton11"
        android:src="@drawable/play"
        android:backgroundTint="#09cde7"
        android:layout_alignBottom="@+id/resumeButton"
        android:layout_alignLeft="@+id/imageButton10"
        android:layout_alignStart="@+id/imageButton10" />

    <ImageButton
        android:layout_width="wrap_content"
        android:src="@drawable/restart"
        android:backgroundTint="#09cde7"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton12"
        android:layout_alignBottom="@+id/resetButton"
        android:layout_alignLeft="@+id/imageButton11"
        android:layout_alignStart="@+id/imageButton11" />
</RelativeLayout>